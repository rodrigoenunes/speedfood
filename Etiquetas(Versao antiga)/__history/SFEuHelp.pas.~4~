unit SFEuHelp;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.StdCtrls, Vcl.Buttons;
  Procedure AjudaEtiquetas(pModo:Boolean = False);

type
  TFuHelp = class(TForm)
    PanCtle: TPanel;
    PanTexto: TPanel;
    Memo1: TMemo;
    btSalvar: TBitBtn;
    btSair: TBitBtn;
    procedure btSairClick(Sender: TObject);
    procedure btSalvarClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FuHelp: TFuHelp;
  arqTexto: String;

implementation

{$R *.dfm}

Procedure AjudaEtiquetas(pModo:Boolean = False);
begin
  FuHelp := TFuHelp.Create(nil);
  with FuHelp
  do begin
    Top := 20;
    Height := Screen.Height - 60;
    Left := 40;
    Width := Screen.Width div 2;
    Memo1.Lines.Clear;
    Memo1.ReadOnly := True;
    btSalvar.Visible := False;
    arqTexto := 'HelpArgox.Txt';
    if FileExists(arqTexto) then
      Memo1.Lines.LoadFromFile(arqTexto)
    else
      pModo := True;
    if pModo then
    begin
      Memo1.ReadOnly := False;
      btSalvar.Visible := True;
    end;
    ShowModal;
    Free;
  end;

end;

procedure TFuHelp.btSairClick(Sender: TObject);
begin
  FuHelp.Close;

end;

procedure TFuHelp.btSalvarClick(Sender: TObject);
begin
  Memo1.Lines.SaveToFile(arqTexto);

end;

end.
